<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/getImageAduanSendiri"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            />

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_arrow_back_white_24dp" />

        <LinearLayout
            android:id="@+id/UbahIsi"
            android:orientation="horizontal"
            android:layout_width="30dp"
            android:visibility="gone"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="30dp">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:src="@drawable/ic_settings_black_24dp"
                />

        </LinearLayout>



    </RelativeLayout>

        <LinearLayout
            android:layout_below="@id/relLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">



            <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_below="@id/relLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:textSize="18sp"
                android:text="Nama Terlapor"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/montserrat"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/getNamaTerlapor"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="14sp"
                android:text=""
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:textSize="18sp"
                android:text="Alamat Kejadian"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/montserrat"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/getAlamatKejadian"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="14sp"
                android:text=""
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:textSize="18sp"
                android:text="Bentuk Perbuatan"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/montserrat"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/getBentuk"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="14sp"
                android:text=""
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:textSize="18sp"
                android:text="Kerugian Korban"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/getKerugian"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="14sp"
                android:text=""
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:textSize="18sp"
                android:text="Saksi - saksi"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/getSaksi"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="14sp"
                android:text=""
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:textSize="18sp"
                android:text="Info Tambahan"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/getInfo"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="14sp"
                android:text=""
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/getTanggal"
                android:layout_width="match_parent"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_marginBottom="5dp"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/statusWait"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="menunggu"
                android:gravity="center"
                android:textSize="15dp"
                android:textAllCaps="true"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:visibility="gone"
                android:textColor="@color/putih"
                android:background="@color/grey"/>

            <TextView
                android:id="@+id/statusPublised"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RILIS"
                android:gravity="center"
                android:textSize="15dp"
                android:textAllCaps="true"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:textColor="@color/putih"
                android:visibility="gone"
                android:background="@color/published"/>

            <TextView
                android:id="@+id/statusEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SELESAI"
                android:gravity="center"
                android:textSize="15dp"
                android:textAllCaps="true"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:textColor="@color/putih"
                android:visibility="gone"
                android:background="@color/colorPrimary"/>

            <TextView
                android:id="@+id/statusDecline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DITOLAK"
                android:gravity="center"
                android:textSize="15dp"
                android:textAllCaps="true"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:textColor="@color/putih"
                android:visibility="gone"
                android:background="@color/decline"/>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/alasan"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="1dp"
                    android:textSize="18sp"
                    android:text="Alasan Tolak"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/getAlasan"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Informasi Alamat Tidak lengkap"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    </ScrollView>


        </LinearLayout>


</RelativeLayout>