<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardAdmin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginEnd="5dp">

    <LinearLayout
        android:id="@+id/rel1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_height="wrap_content">

       <LinearLayout
           android:layout_width="100dp"
           android:layout_margin="5dp"
           android:orientation="vertical"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/getTanggal"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:textSize="15dp"
               android:gravity="center"
               android:fontFamily="@font/montserrat"
               android:text="26"/>


           <TextView
               android:id="@+id/getBulan"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:textSize="24dp"
               android:gravity="center"
               android:fontFamily="@font/montserrat"
               android:textStyle="bold"
               android:text="12"/>

           <TextView
               android:id="@+id/getTahun"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:textSize="15dp"
               android:layout_gravity="center_vertical"
               android:gravity="center"
               android:fontFamily="@font/montserrat"
               android:text="2020"/>

       </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/getJudul"
                android:text="Rapat Bersama sambil ngentot"
                android:textSize="15dp"
                android:fontFamily="@font/montserrat"
                android:layout_marginBottom="2dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/getPerihal"
                android:text="Pencegaha Virus Korona Berkembang di Samarinda"
                android:layout_width="match_parent"
                android:fontFamily="@font/montserrat"
                android:layout_marginBottom="2dp"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_location_on_black_24dp"
                    android:layout_height="15dp"/>

                <TextView
                    android:id="@+id/getLokasi"
                    android:layout_width="match_parent"
                    android:text="Hotel Selyca Muliya"
                    android:fontFamily="@font/montserrat"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>